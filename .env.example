# .env.example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/orlacoach_dev
ANALYTICS_DATABASE_URL=postgresql://username:password@localhost:5432/orlacoach_analytics

# Analytics Configuration
ANALYTICS_API_ENDPOINT=/api/analytics
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_PRIVACY_MODE=true
ANALYTICS_ENABLE_TRACKING=true

# Digital Samba Integration
DIGITAL_SAMBA_API_KEY=your_api_key_here
DIGITAL_SAMBA_WEBHOOK_URL=https://yourdomain.com/api/webhooks/digital-samba

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Authentication
AUTH_SECRET=your_random_secret_key_here
ADMIN_EMAIL=admin@orlamariecoach.com

# External Services
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
