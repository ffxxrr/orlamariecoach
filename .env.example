# MongoDB Docker Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password # Change this in your .env file
MONGODB_DB=orlamariecoach

# Application MongoDB Connection URI
# Use the root user/password defined above, or create a dedicated app user
MONGODB_URI="mongodb://${MONGO_ROOT_USER}:${MONGO_ROOT_PASSWORD}@localhost:27017/${MONGODB_DB}?authSource=admin"

# Other Application Environment Variables (Add as needed)
# Example: PUBLIC_DIGITAL_SAMBA_PROVIDER_ID=YOUR_PROVIDER_ID
ADMIN_USERNAME=your_chosen_admin_username
ADMIN_PASSWORD_HASH=__YOUR_HASHED_PASSWORD__ # Use bcrypt to hash your password