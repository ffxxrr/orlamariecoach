---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import { Image } from 'astro:assets'; // Use Astro's Image component for optimization

// Generate static paths for each service
export async function getStaticPaths() {
  const serviceEntries = await getCollection('services');
  return serviceEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get the specific service entry for this page
const { entry } = Astro.props;
const { Content } = await entry.render(); // Render the Markdown content if any
const service = entry.data;
---

<MainLayout title={service.title}>
  <div class="container mx-auto px-4 py-8 lg:py-16">
    <article class="prose dark:prose-invert max-w-none">
      {service.image && (
        <Image
          src={service.image}
          alt={service.title}
          width={1200}
          height={600}
          format="webp"
          class="mb-6 rounded-lg shadow-md w-full object-cover h-64 md:h-96"
        />
      )}
      <h1 class="text-3xl md:text-4xl font-extrabold mb-4">{service.title}</h1>

      {/* Display Price and Duration if available */}
      {(service.price || service.duration) && (
        <div class="flex flex-wrap gap-4 mb-6 text-lg font-medium text-gray-700 dark:text-gray-300">
          {service.price && (
            <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full dark:bg-primary-900 dark:text-primary-300">
              Price: {service.price}
            </span>
          )}
          {service.duration && (
            <span class="bg-secondary-100 text-secondary-800 px-3 py-1 rounded-full dark:bg-secondary-900 dark:text-secondary-300">
              Duration: {service.duration}
            </span>
          )}
        </div>
      )}

      {/* Render the main description from Markdown */}
      <div class="text-gray-800 dark:text-gray-200">
        <Content />
      </div>

      {/* Optional: Add a Call to Action */}
      <div class="mt-8">
        <a href="/booking" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
          Book This Service
          <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
      </div>
    </article>
  </div>
</MainLayout>
